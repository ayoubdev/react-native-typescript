{
  "name": "ReactNativeTypescript",
  "version": "0.0.1",
  "private": true,
  "author": "Ayoub ADIB <ayoub.development@gmail.com>",
  "licence": "MIT",
  "scripts": {
    "postinstall": "npm run ts:config && npm run ts:definition",
    "gulp:ts:build": "gulp ts:build --rootDir .",
    "gulp:ts:watch": "gulp ts:watch --rootDir .",
    "ts:config": "tsc --init --module es2015 --t ES6 --allowJs --jsx react --noImplicitAny --noImplicitReturns --preserveConstEnums --experimentalDecorators --removeComments --sourceMap",
    "ts:definition": "tsd init && tsd install react --save",
    "tsc:build": "tsc -p ./ --outDir ./",
    "tsc:watch": "tsc -p ./ --outDir ./ -w",
    "start": "concurrent \"npm run tsc:watch\" \"react-native start\"",
    "android": "npm run tsc:build && react-native run-android",
    "ios": "npm run tsc:build && react-native run-ios"
  },
  "dependencies": {
    "react-native": "^0.19.0"
  },
  "devDependencies": {
    "concurrently": "^1.0.0",
    "gulp": "^3.9.1",
    "gulp-typescript": "^2.11.0",
    "typescript": "^1.8.0"
  }
}
